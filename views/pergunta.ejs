<%- include ("./partials/header.ejs") %>
<%- include ("./partials/navbar.ejs")%>



<div class="container">
    <h1>Perguntas</h1>
    <hr>
    <a href="/perguntar" class="btn btn-dark">Perguntar</a> <a href="/" class="btn btn-dark">Inicio</a>
    <hr>
    <br>
    <div class="card">
        <div class="card-body">
            <h1><%= pergunta.titulo %></h1>
            
            <p><%= pergunta.descricao %></p>
            <hr>
            <form method="POST" action="/responder">
                <H3>Responde</H3>
                <label>Resposta:</label>
                <textarea placeholder="Digite sua Resposta" class="form-control" name="corpo"></textarea><br>
                <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                <button type="submit" class="btn btn-dark">Responde</button>
            </form>
            <hr>
            <h3>Respostas</h3>
            <hr>
            <% respostas.forEach(resposta => { %>
                <br>
                <div class="card">
                    <div class="card-body">
                        <p><%= resposta.corpo %> <br></p>
                    </div>
                </div>
                
            <% }) %>

        </div>
        <div class="card-footer">
            
        </div>
    </div>

</div>


<%- include ("./partials/footer.ejs") %>